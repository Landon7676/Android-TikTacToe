<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="3"
    android:padding="16dp">

    <Button
        android:id="@+id/button_0_0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24sp"
        android:contentDescription="Empty cell at row 1, column 1"/>

    <Button
        android:id="@+id/button_0_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24sp"
        android:contentDescription="Empty cell at row 1, column 2"/>

    <Button
        android:id="@+id/button_0_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24sp"
        android:contentDescription="Empty cell at row 1, column 3"/>

    <Button
        android:id="@+id/button_1_0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24sp"
        android:contentDescription="Empty cell at row 2, column 1"/>

    <Button
        android:id="@+id/button_1_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24sp"
        android:contentDescription="Empty cell at row 2, column 2"/>

    <Button
        android:id="@+id/button_1_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24sp"
        android:contentDescription="Empty cell at row 2, column 3"/>

    <Button
        android:id="@+id/button_2_0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24sp"
        android:contentDescription="Empty cell at row 3, column 1"/>

    <Button
        android:id="@+id/button_2_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24sp"
        android:contentDescription="Empty cell at row 3, column 2"/>

    <Button
        android:id="@+id/button_2_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24sp"
        android:contentDescription="Empty cell at row 3, column 3"/>

</GridLayout>
